<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%=title%>
    </title>
    <link rel="stylesheet" href="/home.css">
</head>

<body>
    <h1>ToDo App</h1>
    <form class="app" action="/new-task" method="POST">
        <div class="description">
            <label for="description">DESCRIPTION</label>
            <input type="text" name="description" id="description" placeholder="Enter Description">
        </div>
        <div class="other">
            <div class="category">
                <label for="category">CATEGORY</label>
                <select name="category" id="category">
                    <option selected>Choose one option</option>
                    <option value="PERSONAL">PERSONAL</option>
                    <option value="WORK">WORK</option>
                </select>
            </div>
            <div class="date">
                <label for="description">DUE DATE</label>
                <input type="date" name="dueDate" id="date">
            </div>
        </div>
        <div class="buttons">
            <button type="submit" id="add"><i class="fa-solid fa-plus"></i>Add Task</button>

        </div>

    </form>
    <ul class="list">
        <%for(let i of task_list){%>
            <li class="output">
                <div class="dateDescription">
                    <p class="outputDescription" id="<%=i.id%>">
                        <%=i.description%>
                    </p>
                    <p class="outputDate">
                        <i class="fa-solid fa-calendar-days"></i>
                        <%=i.dueDate%>
                    </p>
                </div>
                <div class="categoryIcons">
                    <%if(i.category!='CHOOSE ONE OPTION'){%>
                        <p class="outputCategory" id="<%=i.id%>">
                            <%=i.category.toUpperCase()%>
                        </p>
                        <%}%>
                            <a href="/toggle-task/?id=<%=i.id%>&completed=<%=i.completed%>" class="done" id="<%=i.id%>"
                                data-done="<%=i.completed%>"><i class="fa-solid fa-check"></i>
                            </a>
                            <a href="/delete-task/?id=<%=i.id%>"><i class="fa-solid fa-xmark delete"></i></a>
                            <%}%>
                </div>
            </li>
    </ul>
    <script type="text/javascript" src="/home.js"></script>
    <script src="https://kit.fontawesome.com/1c1d231961.js" crossorigin="anonymous"></script>
</body>

</html>